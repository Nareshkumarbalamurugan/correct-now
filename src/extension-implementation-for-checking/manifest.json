{
  "manifest_version": 3,
  "name": "CorrectNow - Grammar Checker",
  "version": "1.0.0",
  "description": "Check grammar and spelling on any webpage with CorrectNow",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "CorrectNow Grammar Checker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
